@model EditRolesVM
@{ 
    
}
<div class="offset-sm-4 col-sm-4 border border-dark p-sm-3  bg-light rounded-lg">
    
        <h4 class="text-center col">Edit roles for @Model.User.FirstName @Model.User.LastName</h4>
        <div class="row">
            <form method="post" asp-action="EditRoles">
                <input hidden asp-for="User.Id" />
                <div class="form-row text-center">
                    <div class="offset-1 col-6">
                        <div class="mb-3 form-check form-switch">
                            <input class="form-check-input" type="checkbox" title="PlainUser Role" asp-for="IsPlainUser">
                            <label class="form-check-label" asp-for="IsPlainUser">PlainUser Role</label>
                        </div>
                        
                    </div>
                    <div class="col-5">
                        <div class="mb-3 form-check form-switch">
                            <input class="form-check-input" type="checkbox" title="Sponsor Role" asp-for="IsSponsor">
                            <label class="form-check-label" asp-for="IsSponsor">Sponsor Role</label>
                        </div>
                       
                    </div>
                </div>
                <div class="col-2"><button type="submit" class="btn btn-primary">Save</button></div>

            </form>
        </div>
   
    </div>