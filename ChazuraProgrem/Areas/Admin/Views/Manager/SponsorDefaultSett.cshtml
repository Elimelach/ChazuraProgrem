@model DefaultSponsor
@{
    Layout = "_ManagerLayout";
    ViewBag.Title = "Set Default Sponsor";
}
<form asp-action="SponsorDefaultSett" method="post">
    <div class="form-group row">
        <div class="offset-sm-3 col-sm-4">
            <div class="mb-3 form-check form-switch">
                <input class="form-check-input" type="checkbox" title="Manager Role" asp-for="IsActive">
                <label class="form-check-label" asp-for="IsActive">Show Default Sponsor</label>
            </div>
           
        </div>
    </div>
    <div class=" row offset-sm-3">
        <div class="form-group mr-2">
            <label>לע"נ</label>
            <input type="radio" asp-for="GetSponserType" value="@SponserType.InMemory" />
        </div>
        <div class="form-group mr-2">
            <label>לרפואת</label>
            <input type="radio" asp-for="GetSponserType" value="@SponserType.ToHealth" />
        </div>
        <div class="form-group mr-2">
            <label>לזכות</label>
            <input type="radio" asp-for="GetSponserType" value="@SponserType.ToSake" />
        </div>
        <div class="form-group">
            <label>לכבוד</label>
            <input type="radio" asp-for="GetSponserType" value="@SponserType.InHonor" />
        </div>
        <div class="form-group">
            <label>other</label>
            <input type="radio" asp-for="GetSponserType" value="@SponserType.Other" />
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-3" asp-for="DescriptionName">Name etc</label>
        <input asp-for="DescriptionName" class="form-control col-sm-7">
        <span asp-validation-for="DescriptionName" class="text-danger col-sm-2"></span>
    </div>
    <div class="form-group row">
        <label class="col-sm-3" asp-for="DescriptionElse">Sponsored by</label>
        <input asp-for="DescriptionElse" class="form-control col-sm-7">
        <span asp-validation-for="DescriptionElse" class="text-danger col-sm-2"></span>

    </div>
    <button type="submit" class="btn btn-primary">Save</button>

</form>
