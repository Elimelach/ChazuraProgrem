@using Microsoft.AspNetCore.Identity
@inject SignInManager<User> signInManager
@inject UserManager<User> userManeger

<div class="row">

    @if (signInManager.IsSignedIn(User))
    {
        User user = await userManeger.FindByNameAsync(User.Identity.Name);
        // signed-in user - Log Out button and username

    <div >
        <form method="post" asp-action="LogOut" asp-controller="Account"
              asp-area="">
            <span class="user-name-greeting mr-1">Hi @user.FirstName</span>
            <input type="submit" value="Log Out"
                   class="btn btn-outline-light" />

        </form>
    </div>

    }
    else
    {

        // anonymous user - Register link and Log In button


<div class="form-group ">
    <a asp-action="Login" asp-controller="Account"
       asp-area="" class="btn btn-outline-light" >Log In</a>

    <a class="text-white" asp-action="Register" asp-controller="Account"
       asp-area=""  >
        Register
    </a>
</div>
    }

</div>