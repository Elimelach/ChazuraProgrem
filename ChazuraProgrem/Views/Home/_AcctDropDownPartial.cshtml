@model bool
@{
    if (Model)
    {
        <a class="dropdown-item" asp-action="ChangePassword" asp-controller="Account">ChangePassword</a>
        <a class="dropdown-item" asp-action="EditInfo" asp-controller="Account">Edit Account Info</a>

        <form method="post" asp-action="LogOut" asp-controller="Account"
              asp-area="">

            <input type="submit" value="Log Out"
                   class="dropdown-item" />

        </form>

    }
    else
    {
        <a class="dropdown-item" asp-action="Register" asp-controller="Account">Register</a>
        <a class="dropdown-item" asp-action="LogIn" asp-controller="Account">LogIn</a>
    }
}
