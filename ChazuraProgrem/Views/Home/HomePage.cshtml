@model GetScheduleVM;

<h1 class="text-center mb-3 mb-sm-4 mt-2 mt-sm-5 my-text-cursive"> Welcome to the Chozer Chazura site</h1>
<div class="row m-1 m-sm-0">


    <div class="center-box offset-sm-3 col-sm-6 offset-xl-4 col-xl-4">
        <h3 class="pt-3 text-center font-weight-bold">View your schedule </h3>
        <div class="row ">
            <div class="  col" id="view1">
                <form asp-action="CreateGetScheduleUrl1" method="post" class="spin-at-Submit">
                    <div class="row">
                        <div class="col-7"><h4>Single day view </h4></div>
                        <div class="col-5"><button type="button" class="btn btn-primary swich-view">View Multiple</button></div>
                    </div>
                    <div class="form-group col-12">
                        <div class="col-12"><label asp-for="Date">Select a date </label></div>
                        <div class="col-12 "><input asp-for="Date" type="date" class="form-control" /></div>
                        <span class="col" asp-validation-for="Date"></span>
                    </div>
                    <div class="form-group col-12">
                        <div class="text-center"> <button type="submit" class="btn btn-primary w-50 h-25">View</button></div>
                        
                    </div>
                </form>
                
            </div>

            <div class=" col" id="view7" style="display:none">
                <form asp-action="CreateGetScheduleUrlMulti" method="post" class="spin-at-Submit">
                    <div class="row">
                        <div class="col-7"><h4>Multiple days view</h4></div>
                        <div class="col-5"><button type="button" class="btn btn-primary swich-view">View Single</button></div>
                    </div>
                    <div class="form-group col-12">
                        <div class="col-12"><label asp-for="Date">Select a date </label></div>
                        <div class="col-12 "><input asp-for="Date" type="date" class="form-control" /></div>
                        <span class="col" asp-validation-for="Date"></span>

                    </div>
                    <div class="form-group col-12">
                        <div class="col-12"><label asp-for="Days">Select number of days to view</label></div>
                        <div class="col-12 "><input asp-for="Days" type="number" class="form-control" /></div>
                        <span class="col" asp-validation-for="Days"></span>

                    </div>
                    <div class="form-group col-12">
                        <div class="text-center"> <button type="submit" class="btn btn-primary w-50 h-25">View</button></div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts{

    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/DateValidation.js"></script>
<script>
    $(document).ready(() => {
        $(".swich-view").click(() => {
            $("#view1").toggle();
            $("#view7").toggle();
        });
    });
</script>
}
