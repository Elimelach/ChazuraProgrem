@model GetAddressVM
@{
    ViewBag.Title = "add acct info";
}


<h2 >@Model.Name! We need some additional information for your account </h2>
<h5>please fill out the fields below and press submit to continue.</h5>
<hr />
<div class="row">
    <div class="col-sm-8 col-md-6 offset-sm-2 offset-md-3 my-bg-transform">
        <form method="post" asp-action="GetAddress" class="spin-at-Submit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>



            <div class="form-group  ">
                <label asp-for="Address" class="col-12"></label>
                <input class="form-control col-12" asp-for="Address" />
                <span asp-validation-for="Address" class="text-danger col-12"></span>
            </div>
            <div class="form-row">
                <div class="form-group col-sm">
                    <label asp-for="City" class=" col-12"></label>
                    <input class="form-control col-12" asp-for="City" />
                    <span asp-validation-for="City" class="text-danger col-12"></span>
                </div>
                <div class="form-group col-5 col-sm-3">
                    <label asp-for="State" class=" col-12"></label>
                    <input class="form-control col-12" asp-for="State" />
                    <span asp-validation-for="State" class="text-danger col-12"></span>
                </div>
                <div class="form-group col">
                    <label asp-for="ZipCode" class=" col-12"></label>
                    <input class="form-control col-12" asp-for="ZipCode" />
                    <span asp-validation-for="ZipCode" class="text-danger col-12"></span>
                </div>
            </div>
            <input type="text" asp-for="Username" hidden />


            <div class="form-group ">
                <div class="mb-3 form-check form-switch">
                    <input class="form-check-input" type="checkbox" title="Remember Me" asp-for="RememberMe">
                    <label class="form-check-label" asp-for="RememberMe">Remember Me</label>
                </div>


            </div>

            <div class="form-group row">
                <div class="offset-2 col-sm-4">
                    <button type="submit" class="btn btn-primary ">Submit</button>
                </div>

                <div class="offset-2 col-sm-4">
                    <a asp-action="Index" asp-controller="Home" class="btn btn-outline-primary">Cancel</a>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}