@model EditPersonalInfoVM
@{
    ViewBag.Title = "edit acct info";
}
<h2 class="text-center">Edit acct info</h2>
<hr />
<div class="row">
    <div class="col-sm-8 col-md-6 offset-sm-2 offset-md-3 my-bg-transform">
        <form method="post" asp-action="EditInfo" class="spin-at-Submit">
            <div asp-validation-summary="ModelOnly"class="text-danger"></div>

            <input hidden asp-for="UserId" />
            <div class="form-group row">
                <div class="col-12">
                    <label asp-for="Username">Username</label>
                </div>

                <div class="col-12">
                    <input asp-for="Username"  class="form-control " />
                </div>

                <div class="col-12 ">
                    <span asp-validation-for="Username"class="text-danger"></span>
                </div>
            </div>
            <div class="form-group  row">
                <div class="col-12"> <label asp-for="FirstName"></label></div>
                <div class=" col-12">
                    <input class="form-control" asp-for="FirstName" />
                </div>
                <div class="col-12 ">
                    <span asp-validation-for="FirstName"class="text-danger"></span>
                </div>

            </div>
            <div class="form-group  row">
                <div class="col-12"> <label asp-for="LastName"></label></div>
                <div class=" col-12">
                    <input class="form-control" asp-for="LastName" />
                </div>
                <div class="col-12 ">
                    <span asp-validation-for="LastName"class="text-danger"></span>
                </div>

            </div>
            <div class="form-group  row">
                <div class="col-12"> <label asp-for="Email"></label></div>
                <div class=" col-12">
                    <input class="form-control" asp-for="Email" />
                </div>
                <div class="col-12 ">
                    <span asp-validation-for="Email"class="text-danger"></span>
                </div>

            </div>

            <div class="row">
                <div class="offset-2 col-sm-4">
                    <button type="submit" class="btn btn-primary">Update</button>
                    <a asp-action="HomePage" asp-controller="Home" class="btn btn-outline-primary">Cancel</a>
                </div>
            </div>




        </form>
    </div>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}