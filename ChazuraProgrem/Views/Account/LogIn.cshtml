@model LogViewModel
@{
    ViewBag.Title = "Login";
    string registerAction = (Model.FromSponser) ? "RegisterSponsor" : "Register";
}

<h1 class="text-center">Login</h1>
<hr />
<div class="row">
    <div class="col-sm-8 col-md-6 offset-sm-2 offset-md-3 my-bg-transform">
        <form method="post" asp-action="LogIn" asp-route-returnUrl="@Model.ReturnUrl" class="spin-at-Submit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="FromSponser" hidden />

            <div class="form-group row">
                <div class="col-12">
                    <label asp-for="Username">Username</label>
                </div>

                <div class="col-12">
                    <input asp-for="Username" class="form-control " />
                </div>

                <div class="col-12 ">
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group  row">
                <div class="col-12"> <label asp-for="Password">Password</label></div>
                <div class=" col-12">
                    <input class="form-control" asp-for="Password" />
                </div>
                <div class="col-12 ">
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

            </div>
            <div class="form-group row">
                <div class="offset-sm-2 col-sm-4">
                    <div class="mb-3 form-check form-switch">
                        <input class="form-check-input" type="checkbox" title="Remember Me" asp-for="RememberMe">
                        <label class="form-check-label" asp-for="RememberMe">Remember Me</label>
                    </div>
                    
                </div>
            </div>


            <div class="row">
                <div class="offset-2 col-sm-4">
                    <button type="submit" class="btn btn-primary">Log In</button>
                </div>
            </div>
            <div class="row">
                <div class="offset-2 col">
                    Not registered? <a asp-action="@registerAction" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                </div>
            </div>




        </form>
    </div>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}